<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thawk.tickethawk">

    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/thawk_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/thawk_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />


        <activity android:name="com.thawk.tickethawk.SplitMainActivity"
            android:theme ="@style/splash"
            android:screenOrientation="portrait">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.thawk.tickethawk.CustomerActivity1"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name="com.thawk.tickethawk.CustomerActivity2"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:screenOrientation="portrait"
           >
        </activity>

        <activity android:name="com.thawk.tickethawk.CustomerMainActivity"
            android:theme ="@style/splash"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name="com.thawk.tickethawk.CustomerVendorListActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.thawk.tickethawk.EventActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.thawk.tickethawk.EventTicketNumberActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.thawk.tickethawk.StripeActivity"
            android:screenOrientation="portrait">


        </activity>

        <activity android:name="com.thawk.tickethawk.CustomerTicketGeneration"
            android:screenOrientation="portrait">


        </activity>

        <activity android:name="com.thawk.tickethawk.CustomerArchiveTicketActivity"
            android:screenOrientation="portrait">


        </activity>

        <activity android:name="com.thawk.tickethawk.CommunityEditActivity"
            android:screenOrientation="portrait">


        </activity>

        <activity android:name="com.thawk.tickethawk.AccountInfoActivity"
            android:screenOrientation="portrait">


        </activity>



    </application>

</manifest>